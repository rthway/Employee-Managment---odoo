<?xml version="1.0"?>
<odoo>
  <record id="view_form_employee_department" model="ir.ui.view">
    <field name="name">Employee Department</field>
    <field name="model">employee.department</field>
    <field name="arch" type="xml">
      <form string="Employee Department">
        <group>
          <field name="department"/>
          <field name="note"/>
        </group>
      </form>
    </field>
  </record>

  <record id="view_form_employee_division" model="ir.ui.view">
    <field name="name">Employee Division</field>
